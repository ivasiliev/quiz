{% extends "base.twig" %}

{% block title %}{{ data.name }}{% endblock %}

{% block container %}
        {% include 'header.twig' %}
        <div class="blog_view_header" style="background-image: url({{ data.main_img }});">
                <div class="bvh_shadow"></div>
                <div class="bvh_data">
                        <div class="cont">
                                <div class="bvh_userphoto"></div>
                                <span class="bvh_username"><a>{{ data.userdata.settings.name }}</a></span>
                                <div class="bvh_user_nav">
                                        <a>О себе</a>
                                        <a>Новое в блоге</a>
                                        <a>Посты</a>
                                </div>
                        </div>
                </div>
        </div>
        <div class="cont">
                <h2>{{ data.name }}</h2>
                <div class="post_view_container">
                        {{ data.main_content|raw }}
                </div>
        </div>
{% endblock %}

{% block styles %}
        {#<link href='/css/blog/main.css' rel='stylesheet' type='text/css'>#}
{% endblock %}
{% block scripts %}
        <script async type="text/javascript" src="/js/main.js"></script>
{% endblock %}