{% extends "base.twig" %}

{% block title %}{{ data.name }}{% endblock %}

{% block container %}
        {% include 'header.twig' %}
        <div class="blog_view_header" style="background-image: url(/userimgs/{{ data.main_img }});">
                <div class="bvh_shadow"></div>
                <div class="bvh_data">
                        <div class="cont">
                                <div class="bvh_userphoto" style="background-image: url(/userimgs/{{ data.author.settings.photo }});"></div>
                                <span class="bvh_username"><a href="/blog/{{ data.author.id }}">{{ data.author.settings.name }}</a></span>
                                <div class="bvh_user_nav">
                                        <a href="/blog/{{ data.author.id }}#about">О себе</a>
                                        <a href="/blog/{{ data.author.id }}#new">Новое в блоге</a>
                                        <a href="/blog/{{ data.author.id }}#all">Все записи</a>
                                </div>
                        </div>
                </div>
        </div>
                                {{ dump(user) }}
        <div class="cont">
                <input type="hidden" item="postId" value="{{ data.id }}">
                <h2>{{ data.name }}</h2>
                <div class="post_view_container">
                        {{ data.main_content|raw }}
                </div>
                {% set main_comment_field = 'true' %}
                {% include 'blog/comments.twig' %}
        </div>
{% endblock %}

{% block styles %}
        {#<link href='/css/blog/main.css' rel='stylesheet' type='text/css'>#}
{% endblock %}
{% block scripts %}
        <script async type="text/javascript" src="/js/main.js"></script>
{% endblock %}