<div class="login_cont" login_target="{% if site_section == 'login' %}account{% else %}refresh{% endif %}">
    <h3>Вход в аккаунт</h3>
    <div class="inputs_cont"><span>Логин</span><input type="text" login_data="login"></div>
    <div class="inputs_cont"><span>Пароль</span><input type="password" login_data="pass"></div>
    <button type="button" onclick="login.check(this);">Войти</button>
    <div class="login_link">Нет своего кабинета? <a login_data="reg_switch" href="/reg">Регистрируйтесь</a></div>
</div>