{% extends "base.twig" %}

{% block title %}Главная{% endblock %}

{% block container %}
    <div class="cont">
        {% include 'header.twig' %}

        <div style="
             width: 100%;
             height: 100px;
             margin: 40px 0;
             background: #5d5d5d;
             line-height: 100px;
             text-align: center;
             color: #fff;
             ">здесь может быть рекламный блок</div>

        <div class="main_content table">
            <div class="table-row">
                <div class="table-cell right_column">
                    <h3>Новое</h3>
                    <div class="posts_cont_results">
                        {% include 'blog/list.twig' %}
                    </div>
                </div>
                <div class="table-cell left_column">
                    <div class="box">
                        <div class="popular">
                            <h3>популярное</h3>
                            <div class='links_list'>
                                {% for curr in popular %}
                                    <a href='/blog/posts/{{ curr.id }}'>{{ curr.name }}</a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <div class="box">
                        <div class="categories">
                            <h3>категории</h3>
                            <div class='links_list'>
                                {% for curr in categories %}
                                    <a href='/categories/{{ curr.id }}'>{{ curr.name }}</a>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    <div class="box">
                        <div class="vk_widget">
                            <h3>вконтакте</h3>
                        </div>
                    </div>

                    <div style="
                         width: 100%;
                         height: 100px;
                         margin: 40px 0;
                         background: #5d5d5d;
                         line-height: 100px;
                         text-align: center;
                         color: #fff;
                         ">здесь может быть рекламный блок</div>

                </div>
            </div>
        </div>

        <div style="
             width: 100%;
             height: 100px;
             margin: 40px 0;
             background: #5d5d5d;
             line-height: 100px;
             text-align: center;
             color: #fff;
             ">здесь может быть рекламный блок</div>

    </div>
{% endblock %}

{% block styles %}
    {#<link href='/css/blog/main.css' rel='stylesheet' type='text/css'>#}
{% endblock %}
{% block scripts %}
    <script async type="text/javascript" src="/js/main.js"></script>
{% endblock %}