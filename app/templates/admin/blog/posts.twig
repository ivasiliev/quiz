<button onclick="posts.open_form();">Добавить</button>
{% if list and list|length > 0 %}
        <table class="datalist">
                <thead>
                        <tr>
                                <td>#</td>
                                <td>Название</td>
                                <td>Дата создания</td>
                                <td>Дата модификации</td>
                                <td>&nbsp;</td>
                        </tr>
                </thead>
                <tbody>
                        {% for curr in list %}
                                <tr>
                                        <td>{{ curr.id }}</td>
                                        <td>{{ curr.name }}</td>
                                        <td>{{ curr.dt_create }}</td>
                                        <td>{{ curr.dt_modific }}</td>
                                        <td style="text-align: right;">
                                                <i class="fa fa-eye"></i>
                                                <i class="fa fa-edit" onclick="posts.open_form('{{ curr.id }}');"></i>
                                                <i class="fa fa-trash" onclick="posts.drop('{{ curr.id }}');"></i>
                                        </td>
                                </tr>
                        {% endfor %}
                </tbody>
        </table>
{% else %}
        <h4>Тут пока пусто...</h4>
{% endif %}