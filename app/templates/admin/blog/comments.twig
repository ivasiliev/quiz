{% if comments and categories|length > 0 %}
        <table class="datalist">
                <thead>
                        <tr>
                                <td>#</td>
                                <td>Комментарий</td>
                                <td>Пользователь</td>
                                <td>&nbsp;</td>
                        </tr>
                </thead>
                <tbody>
                        {% for curr in categories %}
                                <tr>
                                        <td>{{ curr.id }}</td>
                                        <td>{{ curr.name }}</td>
                                        <td>{{ curr.descr }}</td>
                                        <td style="text-align: right;">
                                                {#<i class="fa fa-eye"></i>#}
                                                <i class="fa fa-edit" onclick="category.open_form('{{ curr.id }}');"></i>
                                                <i class="fa fa-trash" onclick="category.drop('{{ curr.id }}');"></i>
                                        </td>
                                </tr>
                        {% endfor %}
                </tbody>
        </table>
{% else %}
        <h4>Тут пока пусто...</h4>
{% endif %}