<div class="header">
        <div class="cont table">
                <div class="menu_but" onclick="menu_action('open');"><i class="fa fa-bars"></i></div>
                <div class="menu">
                        <div class="nav">
                                <a href="/">Главная</a>
                                <span onclick="blog.show(this);">Блог</span>
                                <span onclick="shop.show(this);">Магазин</span>
                                <span onclick="users.show(this);">Пользователи</span>
                        </div>
                </div>
                <div class="right_controls">
                        {#
                        <div class="search">
                                <div class="search_cont"></div>
                                <i class="fa fa-search"></i>
                        </div>
                        #}
                        {% if user %}
                                <div class="userdata">
                                        <div class="userinfo">{{ user.settings.name }}</div>
                                        <a href="/login" class="log_button">
                                                <i onclick="" class="fa fa-sign-out"></i>
                                        </a>
                                </div>
                        {% else %}
                                <div class="userdata">
                                        <div class="userinfo"></div>
                                        <a href="/login" class="log_button">
                                                <i class="fa fa-sign-in"></i>
                                        </a>
                                </div>
                        {% endif %}
                </div>
        </div>
</div>