<div class="modal_close_but">+</div>
<div class="modal_header">Настройки</div>
<div class="modal_inputs">
        {# current id #}
        <input type="hidden" formdata="curr_id" value="{{ data.id }}">
        <label class="inputs_cont">
                <span>Имя<font class="required">*</font></span>
                <input type="text" formdata="name" data-required="required" value="{% if data.name %}{{ data.name }}{% endif %}">
        </label>
        {# main photo #}
        <label class="inputs_cont">
                <div class="show_imgs_button" onclick="user_imgs.open_form();"><i class="fa fa-picture-o" aria-hidden="true"></i><font>менеджер изображений</font></div>
                <span>Фото<font class="required">*</font></span>
                <input type="text" formdata="main_img" data-required="required" value="{% if data.main_img %}{{ data.main_img }}{% endif %}">
        </label>
        {# bg photo #}
        <label class="inputs_cont">
                <div class="show_imgs_button" onclick="user_imgs.open_form();"><i class="fa fa-picture-o" aria-hidden="true"></i><font>менеджер изображений</font></div>
                <span>Изображение на фон<font class="required">*</font></span>
                <input type="text" formdata="bg_img" data-required="required" value="{% if data.bg_img %}{{ data.bg_img }}{% endif %}">
        </label>
        {# post body #}
        <label class="inputs_cont">
                <div class="show_imgs_button" onclick="user_imgs.open_form();"><i class="fa fa-picture-o" aria-hidden="true"></i><font>менеджер изображений</font></div>
                <span>О себе</span>
                {#<textarea formdata="main_content" class="post_content">{% if data.content.main %}{{ data.content.main }}{% endif %}</textarea>#}
                <textarea formdata="main_content" class="post_content">
                        {% if data.about %} {{ data.about }} {% endif %}
                </textarea>
        </label>
        {# secret post body #}
        {#<label class="inputs_cont">
                <span>Скрытое содержание</span>
                <textarea formdata="main_content" class="post_content">{% if data.content.main %}{{ data.content.main }}{% endif %}</textarea>
        </label>#}
</div>
<button onclick="posts.save(this);">Сохранить</button>